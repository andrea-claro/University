<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="2"
        android:useDefaultMargins="true"
        android:rowCount="6"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0">

            <TextView android:layout_margin="5dp" android:text="3€" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="fill" android:textSize="30dp"/>
            <TextView android:layout_margin="5dp" android:text="5€" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="fill" android:textSize="30dp"/>
            <TextView android:layout_margin="5dp" android:text="7€" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="fill" android:textSize="30dp"/>
        </LinearLayout>




        <TextView android:text="Primo" android:layout_margin="5dp" android:layout_column="0" android:layout_row="1" android:textSize="30dp"/>
        <RadioGroup android:layout_column="1" android:layout_row="1" android:orientation="horizontal">
            <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="fill" android:tag="3"/>
            <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="fill" android:tag="5"/>
            <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="fill" android:tag="7"/>
        </RadioGroup>

    </GridLayout>

</RelativeLayout>