<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:id="@+id/nomeEsaminato">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="240px"
                android:text="@string/esaminato"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_margin="10px"
                android:textSize="100px"
                android:background="@color/lightBlue"/>


        </LinearLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:rowCount="3"
            android:columnCount="2"
            android:id="@+id/datiUser"
            android:background="@color/white">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Nome:"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="60px"/>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:hint="Andrea"
                android:id="@+id/nomeElemento"/>





            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Cognome:"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="60px"/>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:hint="Claro"
                android:id="@+id/cognomeElemento"/>





            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="# Telefono:"
                android:layout_row="2"
                android:layout_column="0"
                android:textSize="60px"/>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:hint="233453214345"
                android:id="@+id/numeroTelefono"/>
        </GridLayout>





        <Button
            android:layout_height="150px"
            android:layout_width="450px"
            android:text="Inserisci"
            android:layout_gravity="center"
            android:background="@color/yellow"
            android:id="@+id/buttonInsert"
            android:onClick="insertInList"
            android:textSize="40px" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="740px"
            android:layout_marginBottom="100px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="100px"
            android:id="@+id/frameLista"
            android:background="@color/black">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10px"
                android:layout_height="match_parent"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/testoLista"
                    android:text="Lista elementi:"
                    android:textSize="60px" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/contactList" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
