<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/layoutPalla"
        android:layout_marginTop="20dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#0000ff" />
    <RelativeLayout
        android:layout_below="@id/layoutPalla"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/centra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Center"
            android:layout_centerInParent="true"
            android:onClick="onClickCenterButton">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/centra"
            android:onClick="onClickUpButton"
            android:text="Up">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/centra"
            android:onClick="onClickDownButton"
            android:text="Down">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left"
            android:layout_centerVertical="true"
            android:onClick="onClickLeftButton"
            android:layout_marginLeft="70dp">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right"
            android:layout_centerVertical="true"
            android:onClick="onClickRightButton"
            android:layout_marginLeft="250dp">
        </Button>
    </RelativeLayout>
</RelativeLayout>