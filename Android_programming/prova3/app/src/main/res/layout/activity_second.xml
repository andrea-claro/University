<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_alignParentTop="true"
        android:id="@+id/nomeEsaminato">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nome_esaminato"
            android:gravity="center"
            android:textSize="60px"
            android:background="@color/lightBlue"
            android:layout_margin="10px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:layout_marginBottom="100px"
            android:text="Totale pasto: €"
            android:id="@+id/totale"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:layout_marginBottom="40px"
            android:layout_gravity="right"
            android:text="Primo: €"
            android:id="@+id/primo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:layout_marginBottom="40px"
            android:layout_gravity="right"
            android:text="Secondo: €"
            android:id="@+id/secondo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:layout_marginBottom="40px"
            android:layout_gravity="right"
            android:text="Contorno: €"
            android:id="@+id/contorno"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:layout_gravity="right"
            android:layout_marginBottom="40px"
            android:text="Frutta: €"
            android:id="@+id/frutta"/>

    </LinearLayout>
</RelativeLayout>